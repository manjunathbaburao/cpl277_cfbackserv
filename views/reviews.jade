extends layout
block content
  h2 List of Reviews for Restaurant #{name}
    table#reviewList
      thead
        tr
          td User
          td Email
          td Rating
          td Review
      tbody
        - each review in reviews
          tr
            td #{review.userName}
            td #{review.userEmail}
            td #{review.rating}
            td #{review.review}
    br

  a#homelink(href="/") Home
